{
  "name": "@corticai/core",
  "version": "0.1.0",
  "description": "Core context network system for CorticAI",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "npm run clean && npm run build:js && npm run build:types",
    "build:js": "esbuild src/index.ts --bundle --platform=node --target=node18 --format=esm --outfile=dist/index.js --external:kuzu --external:tree-sitter --external:tree-sitter-typescript",
    "build:types": "tsc --emitDeclarationOnly --declaration --declarationMap",
    "clean": "rm -rf dist coverage",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "test:ui": "vitest --ui",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,json,md}\"",
    "typecheck": "tsc --noEmit",
    "prepare": "husky"
  },
  "dependencies": {
    "kuzu": "^0.6.0",
    "tree-sitter": "^0.21.1",
    "tree-sitter-typescript": "^0.23.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vitest/coverage-v8": "^1.0.0",
    "@vitest/ui": "^1.0.0",
    "esbuild": "^0.19.0",
    "eslint": "^8.56.0",
    "husky": "^9.0.0",
    "lint-staged": "^15.0.0",
    "prettier": "^3.2.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "keywords": [
    "context",
    "graph",
    "knowledge",
    "typescript",
    "parser",
    "ast"
  ],
  "author": "CorticAI Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/corticai/corticai.git"
  },
  "bugs": {
    "url": "https://github.com/corticai/corticai/issues"
  },
  "homepage": "https://github.com/corticai/corticai#readme"
}
