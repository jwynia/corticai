{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "declaration": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "ai": ["./node_modules/ai"],
      "ai/*": ["./node_modules/ai/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": [
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "node_modules",
    "dist",
    "tests",
    "benchmarks",
    "examples",
    "src/adapters/HouseholdFoodAdapter.ts"
  ]
}
